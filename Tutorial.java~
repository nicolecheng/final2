import java.util.*;

public class Tutorial{

    static boolean armor = false;
    static boolean traitor = false;
    static boolean weapon = false;
  
  
    static int yourHP = 100;
  
  
    public static void main(String [] args){
	//intro
	String s;
	System.out.println("This is a Text-Based Game. To be more specific, it's a Narnia themed rpg.");
	System.out.println("You are home, sitting on the couch contemplating life in the middle of summer. You feel like moving and getting your blood pumping.");
	System.out.println("Which room do you decide to go to? The kitchen, the bathroom, or your room?");
	Scanner in = new Scanner(System.in);
	s = in.nextLine();
	pickRoom(s);
	System.out.println("The End!");
    }
  
  
    public static void pickRoom(String s){
	//the kitchen
	if (s.toLowerCase().contains("kitchen")){
	    System.out.println("You grab a bite to eat. Where to next?");
	    Scanner in = new Scanner(System.in);
	    String n = in.nextLine();
	    pickRoom(n);
	}
	//the bathroom
	else if (s.toLowerCase().contains("bathroom")){
	    System.out.println("You take a satisfying dump. Where to next?");
	    Scanner in = new Scanner(System.in);
	    String n = in.nextLine();
	    pickRoom(n);
	}
	//where you end up, no matter what
	else{
	    System.out.println("For some reason, your gut tells you to check out the closet in your room.");
	    System.out.println("You see that your clothes are a mess, but you are also intrigued by a light coming from the back.");
	    System.out.println("What do you do: organize your closet, close the closet, or follow the light?");
	    Scanner in = new Scanner(System.in);
	    String p = in.nextLine();
	    pickCloset(p);
	}
    }
  
    public static void pickCloset(String p){
	//organizing gets you rewards, in game and irl
	if (p.toLowerCase().contains("organize")){
	    Stuyhacks.armor = true;
	    System.out.print("You find a shiny armor suit, probably your dad's. What next?");
      
	    Scanner in = new Scanner(System.in);
	    String l = in.nextLine();
	    //but you can only organize once; takes care of cheats
	    if (l.toLowerCase().contains("organize")){
		System.out.println("Your closet is already organized!");
		in = new Scanner(System.in);
		l = in.nextLine();
		pickCloset(l);
	    }
	    else{
		pickCloset(l);
	    }
	}
	//you close the closet like a wimp and get DEAD
	else if (p.toLowerCase().contains("close"))
	    System.out.println("You close the closet door, have an aneurism, and die. Your game is OVER.");
	//go to Narnia
	else{
	    System.out.println("You find yourself in the wintery world of Narnia, overtaken by the Evil White Queen!");
	    System.out.println("Do you look around, or talk to the friendly looking goatman?");
	    Scanner in = new Scanner(System.in);
	    p = in.nextLine();
	    tumnus(p);
	}
    }
  
    public static void tumnus(String x){
	//check out your surroundings
	if (x.toLowerCase().contains("look")){
	    System.out.println("Lol what is there to look at? It's winter.");
	    System.out.println("What now?");
	    Scanner in = new Scanner(System.in);
	    String p = in.nextLine();    
	    tumnus(p);
	}
	else{
	    //Tumnus gets kidnapped. What do you do?
	    System.out.println("Apparently the goatman's name is Tumnus. He invites you to his house for tea. He is very nice but he seems distracted. He keeps looking around.");
	    System.out.println("Suddenly, a gigantic troll jumps out and steals your new friend. What do you do: go after him or pretend that it never happened and stay back?");
	    Scanner in = new Scanner(System.in);
	    String w = in.nextLine();    
	    saveTumnus(w);
	}
    }
  
  
  
  
    //DO YOU SAVE TUMNUS OR STAY BEHIND?
    public static void saveTumnus(String w){
	if ((w.toLowerCase().contains("pretend")) || (w.toLowerCase().contains("stay"))){
	    Stuyhacks.traitor = true;
	    // do you find a weapon?
	    int n = (int) (Math.random()*2);
	    if (n == 0){
		Stuyhacks.weapon = true;
		System.out.println("You found a weird looking dagger expelling magical dust with every swing.");
	    }
	    troll();
	}
    
	else{
	    miniGameChase();
	}
    }
  
    //WHAT HAPPENS WHEN YOU STAY BEHIND
    public static void troll(){
	boolean die;
    
	System.out.println("Suddenly a troll pops up out of nowhere. You start to battle!");
	//fight the troll if you have the weapon
    
	die = battleGen(150);
	if (die){
      
	    System.out.println("Oh No! The troll killed you!");
	}
	else{
	    System.out.println("Good job! You slayed the troll!");
	    System.out.println("The White Queen sees how cowardly you are for not saving Tumnus and summons you to her.");
	    System.out.println("Do you fight her to prove your worth, or not?");
	    Scanner in = new Scanner(System.in);
	    String z = in.nextLine();
	    whiteQueen(z);
      
	}   
    }
    ///////////////////////////////////////////////////////////////////////////////// 
  
  
  
    public static boolean battleGen(int oppHP){
	int heroHP = Stuyhacks.yourHP; // 100 +? 100 (from armor)
	int extradmg = 0;
    
	if (Stuyhacks.armor == true){
	    heroHP += 100;
	}
	if (Stuyhacks.weapon == true){
	    extradmg += 15;
	}
    
	return attack(heroHP, oppHP, extradmg);
    
    }
  
    //////////////////////////////////////////////////////////////////////////////////////////
  
    ////////////////////////ATTACK FUNCTION/////////////////////////////////////////////
    public static boolean attack(int heroHP, int oppHP, int extradmg){
	boolean ret = true;
	System.out.println("Your Health: " + heroHP);
	System.out.println("Opponent's Health: " + oppHP);
	System.out.println();
    
	while (heroHP>0 && oppHP>0){
	    int damage = 0;
	    System.out.println("Choose an Attack: \nSlap \tKick \nPunch \tSlam");
	    Scanner in = new Scanner(System.in);
	    String attack = in.nextLine();
      
	    damage += extradmg; // if applicable, +25
      
      
	    if (attack.toLowerCase().contains("slap")){ // 0 - 10 damage
		int damagenew = extradmg + ((int) (Math.random() * 11));
		oppHP -= damagenew; 
	    }
	    else if (attack.toLowerCase().contains("kick")){ // 10-15
		int damagenew = extradmg + ((int) (Math.random() * 6)+10);
		oppHP -= damagenew; 
	    }
	    else if (attack.toLowerCase().contains("punch")){// 10 - 15
		int damagenew = extradmg + ((int) (Math.random() * 6)+10);
		oppHP -= damagenew; 
	    }
	    else  { // If they dont choose, or choose 'slam', they automatically do the slam attack:  0 - 25 damage
		int damagenew = extradmg + ((int) (Math.random() * 21));
		oppHP -= damagenew; 
	    }
      
	    int oppdmg = (int) (Math.random() * 21);
	    heroHP -= oppdmg;
	    System.out.println("You used " + attack + ". Your opponent used " + attack + "as well.");
	    System.out.println("Your Health: " + heroHP);
	    if (oppHP >= 0){
		System.out.println("Opponent's Health: " + oppHP);
	    }
	    else{
		System.out.println("Opponent's Health: 0");
		System.out.println();
	    }
      
	    if (heroHP <= 0) ret = true;
	    else if (oppHP <= 0) ret = false;
	}
	return ret;
    }
  
  
    //////////////////////////////////////////////////////////////
    //WHAT HAPPENS IF YOU CHOOSE TO SAVE TUMNUS
    public static void miniGameChase(){
	System.out.println("To save Tumnus, you must answer at least 2 of the following 4 questions correctly.");
	int score = 0;
	//riddles
	String[] door0 = {"If I drink, I die. If I eat, I'm fine. What am I?","What gets more wet the more it dries?","What's at the end of a rainbow?","What has a face and two hands but no arms or legs?"};
	String[] door1 = {"Poor people have it, rich people need it, if you eat it you die. What is it?","What goes up and does not come back down?","Brothers and sisters I have none, but this man's father is my father's son. Who is this man?","A man walks into the bar, goes up to the bartender, the bartender scares him, the man says thank you and walks out. What happened?" };
	String[] door2 = {"Where is most of the world's fresh water located?","What is the capital of Canada?","What's the capital of California?","What is the capital of Australia?"};
	String[] door3 = {"What is converted into alcohol during brewing?","In which city was Martin Luther King assasinated?","What day of the week are you most likely to have a heart attack?","What do you call an infant whale?"};
	//answers
	String[] door0ans = {"fire","towel","w","clock"};
	String[] door1ans = {"nothing","age","my son","hiccup"};
	String[] door2ans = {"antarctica","ottowa","sacramento","canberra"};
	String[] door3ans = {"sugar","memphis","monday","calf"};
	//randomly choose which riddle
	int num0 = (int) (Math.random()*4);
	System.out.println(door0[num0]);
	Scanner in = new Scanner(System.in);
	String d0 = in.nextLine();
	if (d0.toLowerCase().contains(door0ans[num0])){
	    System.out.println("Correct!");
	    ++score;
	}
	else{
	    System.out.println("Incorrect! The correct answer was " + door0ans[num0]);
	}
	int num1 = (int) (Math.random()*4);
	System.out.println(door1[num1]);
	in = new Scanner(System.in);
	String d1 = in.nextLine();
	if (d1.toLowerCase().contains(door1ans[num1])){
	    System.out.println("Correct!");
	    ++score;
	}
	else{
	    System.out.println("Incorrect!  The correct answer was " + door1ans[num1]);
	}
	int num2 = (int) (Math.random() * 4);
	System.out.println(door2[num2]);
	in = new Scanner(System.in);
	String d2 = in.nextLine();
	if (d2.toLowerCase().contains(door2ans[num2])){
	    System.out.println("Correct!");
	    ++score;
	}
	else{
	    System.out.println("Incorrect!  The correct answer was " + door2ans[num2]);
	}
	int num3 = (int) (Math.random() * 4);
	System.out.println(door3[num3]);
	String d3 = in.nextLine();
	if (d3.toLowerCase().contains(door3ans[num3])){
	    System.out.println("Correct!");
	    ++score;
	}
	else{
	    System.out.println("Incorrect!  The correct answer was " + door3ans[num3]);
	}
	if (score >= 1){
	    System.out.println("Congratulations! You won! You got " + score + " correct!");
	}
	else{
	    System.out.println("You lost and died! Your game is over!");
	}
    }
  
    //WHAT HAPPENS IF YOU SAVE TUMNUS/BEAT THE MINIGAME
    public static void whiteQueen(String z){
	if (z.toLowerCase().contains("fight")){
	    //If you win I think?
	    if (battleGen(200) == false){
		aslan();
	    }
	    else System.out.println("YOU DEAD");
	}
	//Queen kills you
	else if ((z.toLowerCase().contains("don't")) || (z.toLowerCase().contains("dont"))){
	    System.out.println("With a swing of her magical wand, she freezes you and then drops you on the floor...shattering your body.");
	}
    }
  
  
    //WHAT HAPPENDS IF YOU DEFEAT THE QUEEN
    public static void aslan(){
	//Aslan comes to see you
	System.out.println("OMG you beat the queen...and now you see a strange animal figure appearing through the castle doors. IT'S ASLAN!");
	System.out.println("He appears to you because you were courageous enough to fight the queen.");
	//if you suck and are a traitor who didn't save Tumnus originally
	if (Stuyhacks.traitor == true){
	    System.out.println("Oh no! Who's that?! Its Tumnus. He's come back to get revenge. How could you not save him...but fight the queen?!");
	    System.out.println("Are you sorry for abandoning him?");
	    Scanner in = new Scanner(System.in);
	    String sorry = in.nextLine();
	    //if you're sorry
	    if (sorry.toLowerCase().contains("no")){
		System.out.println("That's too bad, because Tumnus takes out his dagger and stabs you to death.\nYOU DIED");
	    }
	    //or you suck SO BAD
	    else{
		System.out.println("He forgives you because he trusts in you now. After all, you killed the White Queen.");
		System.out.println("Aslan then comes up to you and requests that you stay in Narnia. Do you decide to go home, or stay in Narnia?");
		endChoice();
	    }
	}
	//or you weren't horrible
	else{
	    System.out.println("Tumnus thanks you for all of your bravery it took to save him. Aslan then comes up to you and");
	    System.out.println("requests that you stay in Narnia. Do you decide to go home, or stay in Narnia?");
	    endChoice();
	}
    }
    //deciding your general future
    public static void endChoice(){
	Scanner in = new Scanner(System.in);
	String endlife = in.nextLine();
	//go home
	if (endlife.toLowerCase().contains("home")){
	    System.out.println("As soon as you go back through the closet and return home, you have a massive heart attack and die.\nYOU DIED.");
	}
	//stay in Narnia
	else narniaLife();
    }
    //deciding your future in Narnia
    public static void narniaLife(){
	System.out.println("As being the hero of Narnia, you have the choice of living different lifestyles here. Would you like to be an adventurer, high royalty, or just a commoner of Narnia?");
	Scanner in = new Scanner(System.in);
	String choice = in.nextLine();
	//adventurer
	if (choice.toLowerCase().contains("adventure")){
	    System.out.println("You live out the rest of your years in Narnia looking for the thrill of life. You scavenge through the forests, the oceans, and the skies of Narnia.");
	}
	//royal
	else if ((choice.toLowerCase().contains("royalty")) || (choice.toLowerCase().contains("king")) || (choice.toLowerCase().contains("queen"))){
	    System.out.println("You live out the rest of your years loved by the people and ruling fairly in the High Court of Narnia.");
	}
	//normal
	else{
	    System.out.println("You live out your life with content. You have a house. a steady source of income, amd many friends in Narnia.");
	}
    } 




}
